<Window x:Class="Clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Analog Clock" Height="450" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Loaded="Window_Loaded" ShowInTaskbar="False" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave">
    <Border Name="WindowBorder" BorderBrush="Transparent" BorderThickness="1">
        <Grid Name="MainGrid" Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseMove="Grid_MouseMove" MouseLeftButtonUp="Grid_MouseLeftButtonUp">
            <Canvas Name="ClockCanvas" Background="Transparent"/>
            <TextBlock Name="DateTextBlock" Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 50 0 0"/>
        </Grid>
    </Border>
</Window>